<?xml version="1.0" encoding="utf-8"?>
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:background="#121212">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Row 1 Starts From Here -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="RCPC User Manual"
            android:textSize="20dp"
            android:padding="20dp"
            android:layout_span="6"
            android:background="#272727"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"/>


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <!-- Row 2 Starts From Here -->

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_cast_connected_1" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:text="Connect IP address and Port number."
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_power_settings_new_1" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:text="Power Off "
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_baseline_restart" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:text="Reset PC"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:textSize="15dp" />

    </TableRow>

    <!-- Row 3 Starts From Here -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_baseline_lock_24" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Lock PC"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pic5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_baseline_sleep" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Power Off"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/pic6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_settings_1" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Open Control Panel"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </TableRow>

    <!-- Row 4 Starts From Here -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/pic7"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_storage_1" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Open File Explorer "
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_calculator_07" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Open       Calculator"
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_desktop_windows_24" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Open Browser"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </TableRow>

    <!-- Row 5 Starts From Here -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/pic10"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_notepad_24" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Open Notepad "
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_clear_all_07" />

        <TextView
            android:id="@+id/text11"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Clear All"
            android:textColor="#ffffff"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/pic12"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/baseline_backspace_07" />

        <TextView
            android:id="@+id/text12"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Back Space"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </TableRow>
    <!-- Row 1 Starts From Here -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Other Buttons"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_span="6"
        android:background="#272727"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:gravity="center"/>


    <!-- Row 6 Starts From Here -->

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_horizontal"
        tools:ignore="ExtraText">

        <ImageView
            android:id="@+id/pic13"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Enter"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <TextView
            android:id="@+id/text13"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Home    Fragment "
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic14"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_baseline_mouse_24" />

        <TextView
            android:id="@+id/text14"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Mouse Fragment"
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/pic15"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_baseline_keyboard_24" />

        <TextView
            android:id="@+id/text15"
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Keyboard Fragment"
            android:textColor="#ffffff"
            android:textSize="12dp" />

    </TableRow>

    <Button
        android:id="@+id/Ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffff"
        android:text="OK" />

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="23dp"
        android:gravity="center_horizontal" />

    </TableLayout>